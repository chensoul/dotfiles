# Show top processes by CPU usage
function topcpu() {
    ps aux | sort -nr -k 3 | head -10
}

# Show top processes by memory usage
function topmem() {
    ps aux | sort -nr -k 4 | head -10
}

# Show disk usage for current directory
function diskusage() {
    du -sh * | sort -hr
}

